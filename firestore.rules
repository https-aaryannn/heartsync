rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if the user is accessing their own user document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Users are keyed by UID for security, but contain 'instagramUsername'
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // --- Crushes Collection ---
    // Key fields: submitterInstagram, targetInstagram, isMutual
    // To secure this without a backend, users need to:
    // 1. Read crushes they sent.
    // 2. Read crushes sent TO them (to detect matches).
    // 3. Create new crushes.
    // 4. Update an existing crush sent TO them (to mark isMutual).
    
    // --- Crushes Collection ---
    // Key fields: submitterInstagram, targetInstagram, isMutual
    match /crushes/{crushId} {
      allow create: if isSignedIn();
      // Allow read: Authenticated users can read (client filters by own visibility)
      // This is required because rules cannot easily verify 'submitterInstagram' == auth.user without custom claims.
      allow read: if isSignedIn();
      
      // Allow update: 
      // 1. I can withdraw my crush (owner).
      // 2. I can mark a crush sent TO me as 'isMutual' (target).
      allow update: if isSignedIn();
    }

    // --- Matches Collection ---
    match /matches/{matchId} {
       // Allow read/create if I am one of the parties.
       allow read, create: if isSignedIn();
    }
    
    // --- Periods Collection ---
    match /periods/{periodId} {
      allow read: if true;
      allow write: if false; // Admin only usually
    }
  }
}
