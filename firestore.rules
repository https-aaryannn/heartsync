rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if the user is accessing their own user document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Users are keyed by UID for security, but contain 'instagramUsername'
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // --- Crushes Collection ---
    // Key fields: submitterInstagram, targetInstagram, isMutual
    // To secure this without a backend, users need to:
    // 1. Read crushes they sent.
    // 2. Read crushes sent TO them (to detect matches).
    // 3. Create new crushes.
    // 4. Update an existing crush sent TO them (to mark isMutual).
    
    // --- Crushes Collection ---
    // Key fields: submitterInstagram, targetInstagram, isMutual
    // --- Crushes Collection ---
    match /crushes/{crushId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update: if isSignedIn();
    }

    // --- Matches Collection ---
    match /matches/{matchId} {
       allow read: if isSignedIn();
       allow create, update: if isSignedIn();
    }
    
    // --- Periods Collection ---
    match /periods/{periodId} {
      allow read: if true;
      allow write: if false; // Admin only usually
    }
  }
}
