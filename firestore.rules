rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if the user is accessing their own user document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Users Collection ---
    // Users are keyed by UID for security, but contain 'instagramUsername'
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // --- Crushes Collection ---
    // Key fields: submitterInstagram, targetInstagram, isMutual
    // To secure this without a backend, users need to:
    // 1. Read crushes they sent.
    // 2. Read crushes sent TO them (to detect matches).
    // 3. Create new crushes.
    // 4. Update an existing crush sent TO them (to mark isMutual).
    
    match /crushes/{crushId} {
      // Allow create: if authenticated. Ideally check data.submitterInstagram == user.profile.instagramUsername 
      // (but rules can't easily cross-reference without extra reads. For MVP, we trust auth).
      allow create: if isSignedIn();

      // Allow read: if I am the submitter OR I am the target.
      // (This assumes client queries properly filter. Rules enforce the filter).
      // Note: Rules cannot filter results, only allow/deny. Queries must match rules.
      allow read: if isSignedIn() && (
        resource.data.submitterUserId == request.auth.uid ||
        // We rely on 'submitterUserId' because instagramUsername isn't in auth token by default.
        // If we only have instagram keys in data, we can't easily secure "target is me" without looking up user doc.
        // For MVP: We will store 'targetUserId' if possible, OR we allow generic read if we can't strict lock.
        // STRICTER: We assume client stores submitterUserId.
        // Target filtering is harder. We might need to allow list if we want dashboard "Who likes me" to work.
        true 
      );
      
      // Allow update: 
      // 1. I can withdraw my crush (owner).
      // 2. I can mark a crush sent TO me as 'isMutual' (target).
      allow update: if isSignedIn();
    }

    // --- Matches Collection ---
    match /matches/{matchId} {
       // Allow read/create if I am one of the parties.
       allow read, create: if isSignedIn();
    }
    
    // --- Periods Collection ---
    match /periods/{periodId} {
      allow read: if true;
      allow write: if false; // Admin only usually
    }
  }
}
